<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@id/connectionStatus"
        android:layout_marginStart="8dp"
        android:text="@string/mi_dispositivo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="26dp"
        android:background="#1E0994B9"
        android:padding="3dip">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="58dp"
            android:layout_height="71dp"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="@string/todo"
            android:src="@drawable/machine" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_address"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true" />

            <TextView
                android:id="@+id/my_status"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/my_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <TextView
        android:id="@+id/peer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="126dp"
        android:text="@string/dispositivos_encontrados"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/peerListView"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_above="@+id/uploadStreaming"
        android:layout_below="@id/peer_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/connection_status"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#E83C2F"
        android:text="RECORD" />

    <Button
        android:id="@+id/uploadStreaming"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_above="@+id/recordButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#0994B9"
        android:text="UPLOAD STREAMING" />

</RelativeLayout>